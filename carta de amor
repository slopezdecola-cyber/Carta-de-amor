<script>
    // 游눘 EDITA AQU칈 TU MENSAJE 游눘
    const nombre = "Mi Loquita";
    const mensaje1 = "Desde que llegaste a mi vida, todo cambi칩. Gracias por estar en mi vida, por ti los di치s son m치s lindos y coloridos, me gustaria esatr contigo el dia de hoy para poder divertirnos juntos, te  dare mis sonrisas m치s sinceras ya qur contigo mi coraz칩n es m치s tranquilo.";
    const mensaje2 = "Quiero que sepas que te pienso m치s de lo que imaginas , que siempre estas en mi coraz칩n y que cada latido de mi coraz칩n es por ti.";
    const tuNombre = "Con todo mi amor 仇벒잺";

    document.getElementById("titulo").textContent = "Para " + nombre;
    document.getElementById("p1").textContent = mensaje1;
    document.getElementById("p2").textContent = mensaje2;
    document.getElementById("firma").innerHTML = `Siempre tu pato loco,<br>${tuNombre}`;

    // 游눗 Corazones flotando
    function crearCorazon() {
        const corazon = document.createElement("div");
        corazon.classList.add("corazon");
        corazon.innerHTML = "仇벒잺";
        corazon.style.left = Math.random() * 100 + "vw";
        corazon.style.fontSize = (15 + Math.random() * 20) + "px";
        corazon.style.animationDuration = (4 + Math.random() * 4) + "s";

        document.body.appendChild(corazon);

        setTimeout(() => {
            corazon.remove();
        }, 7000);
    }

    setInterval(crearCorazon, 600);
</script>

